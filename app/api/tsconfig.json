{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "./",
        "composite": true,
        "baseUrl": "./",
        "paths": { 
            "@api/*": ["src/*"],
            "@domain/*": ["src/domain/*"],
            "@infrastructure/*": ["src/infrastructure/*"],
            "@application/*": ["src/application/*"],

            "@lib/*": ["src/lib/*"],
            "@prisma/*": ["src/generated/client/*"],
            "@server/*": ["src/infrastructure/server/*"],
            "@historia/types/*": ["../../packages/shared/types/src/*"],
        },
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "dist"],
    "references": [{ "path": "../../packages/shared/types" }]
}
